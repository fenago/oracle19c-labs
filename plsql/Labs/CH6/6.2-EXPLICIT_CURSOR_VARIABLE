DECLARE
 c_refcur	SYS_REFCURSOR;
 c_id     	PLS_INTEGER;
 c_name   	VARCHAR2(50);
BEGIN
 OPEN c_refcur FOR 
	SELECT d.department_id, d.department_name
	FROM departments d WHERE d.department_id =50;
 LOOP
    FETCH c_refcur INTO c_id, c_name;
    EXIT WHEN c_refcur%NOTFOUND;
    dbms_output.put_line('Dept('||c_id||'):'||c_name);
 END LOOP;
 ----------------------------------
 OPEN c_refcur FOR 
	SELECT employee_id, first_name 
	FROM employees WHERE employee_id=150;
 LOOP
    FETCH c_refcur INTO c_id, c_name;
    EXIT WHEN c_refcur%NOTFOUND;
    dbms_output.put_line('Employee('||c_id||'):'||c_name);
 END LOOP;
 CLOSE c_refcur;
END;
/
