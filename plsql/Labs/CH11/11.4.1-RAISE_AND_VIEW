DECLARE 
 low_salary        EXCEPTION;
 v_salary          NUMBER := 5;
BEGIN
   CASE 
   WHEN v_salary < 1500 THEN 
      RAISE low_salary;
   ELSE
      NULL;
   END CASE;
   UPDATE emps
   SET    first_name='Ernesto', salary = v_salary
   WHERE  employee_id = 1;
EXCEPTION
   WHEN low_salary THEN 
     dbms_output.put_line('Too low salary');
     RAISE; 
END;  
/
