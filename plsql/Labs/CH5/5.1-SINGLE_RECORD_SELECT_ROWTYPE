DECLARE
  p_employee		employees%ROWTYPE;
BEGIN
  SELECT * INTO p_employee
  FROM employees
  WHERE employee_id=200;
  dbms_output.put_line('Employee record ('||p_employee.employee_id||'): '||
                                            p_employee.first_name||' '||
                                            p_employee.last_name||' has a salary '||
                                            p_employee.salary);
END;
/
